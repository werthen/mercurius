<div class="one-page">
    <header class="banner">
        <div class="title">Mercurius <%= fa_icon :mercury %></div>
        <div id="locales">
            <%= locales %>
        </div>
    </header>
    <div class="blank"></div>
    <main class="main">
        <!-- <%= render 'icon_links' %> -->
        <%= render 'icon_select' %>
        <%= form_tag courses_path, method: 'get', id: 'search-form', class: 'pure-form' do %>
            <div class="pure-g" id="searchbar">
                <div class="remote pure-u-3-4">
                    <%= text_field_tag 'search', nil, placeholder: t('search_default'), class: 'pure-input pure-input-1' %>
                </div>
                <div class="pure-u-1-4">
                    <%= submit_tag t('search'), id: 'search-button', class:'pure-button pure-button-primary' %>
                </div>
            </div>
        <% end %>
    </main>
    <footer>
        <%= link_to t('lot_of_love', love: love, thing: thing), 'http://werthen.com' %>
    </footer>
</div>
